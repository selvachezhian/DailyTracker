<%= form_for(activity) do |f| %>
    <blockquote>
    <p>
      <small>Start:</small>
      <%= activity.start && activity.start.strftime("%H:%M (Hour:Min)") %>
    </p>

    <p>
      <small>End:</small>
    <span class="field">
      <%= f.text_field :end, :autofocus => true %>
      <%= f.label "hh:mm" %><br>
    </span>
    <p>
      <small>Type:</small>
      <%= activity.activity_type.name %>
    </p>
    <div class="actions">
      <%= f.submit %>
    </div>
    </blockquote>
    <hr />
<% end %>